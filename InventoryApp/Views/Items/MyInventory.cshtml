@model IEnumerable<InventoryApp.Models.Item>
@{
    ViewBag.Title = "MyInventory";
}

<h2>My Inventory</h2>

<ul class="items">
    @foreach (var item in Model)
    {
        <li>
            <div class="description">
                <span class="description">
                    <text>Description: </text>
                    @item.Description
                </span>
                <span class="company">
                    <text>Company: </text>
                    @item.Company
                </span>
            </div>
            <div class="user">
                <span class="userName">
                    <text>User Name: </text>
                    @item.User.Name
                </span>
                <span class="email">
                    <text>User Email: </text>
                    @item.User.Email
                </span>
            </div>
            <div class="details">
                <span class="quantity">
                    <text>Quantity: </text>
                    @item.Quantity
                </span>
                <span class="cost">
                    <text>Cost: </text>
                    @item.Cost
                </span>
            </div>
        </li>
    }
</ul>