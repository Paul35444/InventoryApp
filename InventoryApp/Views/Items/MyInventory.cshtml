@model IEnumerable<InventoryApp.Core.Models.Item>
@{
    ViewBag.Title = "MyInventory";
}

<h2>My Inventory</h2>

<ul class="items">
    @foreach (var item in Model)
    {
        <li>
            <div class="description">
                <span class="description">
                    <text>Description: </text>
                    @item.Description
                </span>
                <span class="company">
                    <text>Company: </text>
                    @item.Company
                </span>
            </div>
            <div class="user">
                <span class="userName">
                    <text>User Name: </text>
                    @item.User.Name
                </span>
                <span class="email">
                    <text>User Email: </text>
                    @item.User.Email
                </span>
            </div>
            <div class="details">
                <span class="quantity">
                    <text>Quantity: </text>
                    @item.Quantity
                </span>
                <span class="cost">
                    <text>Cost: </text>
                    @item.Cost
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Items", new { id = item.Id })">Edit</a>
                    <a href="#" class="js-delete-item" data-item-id="@item.Id">Delete</a>
                </div>
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-delete-item").click(function (e) {
                var link = $(e.target);

                var dialog = bootbox.dialog({
                    title: 'Confirm',
                    message: "<p>Are you sure you want to delete this inventory item?</p>",
                    buttons: {
                        cancel: {
                            label: "Cancel",
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        delete: {
                            label: "DELETE",
                            className: 'btn-danger',
                            callback: function () {
                                $.ajax({
                                    url: "/api/items/" + link.attr("data-item-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        alert("Failed to delete item!");
                                    });
                            }
                        }
                    }
                });
            });
        });
    </script>    
}